<!DOCTYPE html>
<html>
<%-include('./partials/head')%>

<body>
  <!-- Navbar (sit on top) -->
  <nav class="ps-top">
    <div class="ps-bar ps-white ps-padding ps-card ps-nav">
      <a href="#home" class="ps-bar-item ps-button">Pimienta & Sal</a>
      <!-- Right-sided navbar links. Hide them on small screens -->
      <div class="ps-right ps-hide-small">
        <a href="/about" class="ps-bar-item ps-button">About</a>
        <a href="#menu" class="ps-bar-item ps-button">Menu</a>
      </div>
    </div>
  </nav>

  <!-- Header -->

  <%-include('./partials/header')%>

  <!-- Page content -->
  <div class="ps-content">

    <!-- Menu Section -->
    <div class="ps-row ps-padding-64" id="menu">
      <div class="ps-col l6 ps-padding-large">

        <div class="ps-col l6 ps-padding-large ps-img-menu image">
          <img src="/images/<%= comidaId.image %> " class="ps-round ps-image ps-opacity-min" alt="Menu">
        </div>
        <h4 class="name"><%= comidaId.name %> </h4>
        <p class="ps-text-grey description"><%= comidaId.description %> </p>
        <p class="price">Precio: <%= comidaId.price %> U$S</p>
        <div>
          <button type="button" class="btn btn-outline-primary">COMPRAR</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <%-include('./partials/footer')%>
  </div>
</body>

</html>